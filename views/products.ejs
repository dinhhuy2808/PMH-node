            function showPage(ind){
                if(ind > <%=page%> ) {pageIndex=1}
                if(ind < 1 ) {pageIndex = <%=page%>}
                <%for(i=1; i<=page; i++) {%>
                    var products = document.getElementsByClassName("<%=i%>");
