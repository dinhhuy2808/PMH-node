        if (pnumber == '') {
            result = 0
        }
        ;
        var snum = new String(pnumber);
        var result = '';
        j = snum.length - 1;
        dem = 1;
        while (j >= 0) {
            if (dem % 4 != 0) {
                result = snum[j] + result;
                j--;
                dem++;
            } else {
                result = '.' + result;
                dem = 1;
            }
        }
        if (currents[i].id == "dictprice") {
            currents[i].innerHTML = result;
        } else {
            currents[i].innerHTML = "&nbsp;" + result + "&nbsp";
        }

    }

</script>
</html>

