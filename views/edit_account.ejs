        <div class="row" data-gutter="60">
            <div class="col-md-12">
                <h2><span class="label label-info center-block">Chỉnh sửa tài khoản</span></h2>

                <form action="/save-account" method="post" id="frmId" >
                    <input class="form-control" type="text" name="id" id="id" value="<%= user[0].user_id %>" required
                           style="display: none">
                    <div class="row" style="display: none">
                        <div class="form-group form-group-icon-left col-md-6"><i
                                    class="fa fa-user input-icon input-icon-show"></i>
                            <label>Tên tài khoản</label>
                            <input class="form-control" type="text" name="username" id="username"
                                   value="<%= user[0].username %>" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group form-group-icon-left col-md-3">
                        </div>
                        <div class="form-group form-group-icon-left col-md-6"><i
                                    class="fa fa-user input-icon input-icon-show"></i>
                            <label>Tên</label>
                            <input class="form-control" type="text" name="fname" id="fname"
                                   value="<%= user[0].firstname %>" required>
                        </div>

                    </div>


                        <div class="row">
                            <div class="form-group form-group-icon-left col-md-3">
                            </div>
                            <div class="col-md-6">
                                <label>Sinh Ngày</label>
                                <input class="form-control"  id = 'dob' name = "dob" type = 'date' value = '' required>
                            </div>

                        </div>

                    <div class="row" >
                        <div class="form-group form-group-icon-left col-md-3">
                        </div>
                        <div class="col-md-6">
                            <label>Giới Tính</label>
                            <select class="form-control" id = "gender" name = "gender">
                                <option value = "M">Quý Ông</option>
                                <option value = "F">Quý Bà</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group form-group-icon-left col-md-3">
                        </div>
                        <div class="form-group form-group-icon-left col-md-6" style="display: none"><i
                                    class="fa fa-user input-icon input-icon-show"></i>
                            <label>Email</label>
                            <input class="form-control" type="text" name="email" id="email" value="<%= user[0].email %>"
                                   >
                        </div>
                        <div class="form-group form-group-icon-left col-md-6"><i
                                    class="fa fa-user input-icon input-icon-show"></i>
                            <label>Điện thoại</label>
                            <input class="form-control" type="text" name="phone" id="phone" value="<%= user[0].phone %>"
                                   required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group form-group-icon-left col-md-3">
                        </div>
                    <div class="form-group form-group-icon-left col-md-6"><i class="fa fa-user input-icon input-icon-show"></i>
                        <label>Địa chỉ</label>
                        <input class="form-control" type="text" name="addr" id="addr"
                               value="<%= user[0].address==null?"":user[0].address %>" required>
                    </div>
                    </div>
                    <div class="row" style="display: none">
                        <div class="form-group form-group-icon-left col-md-3">
                        </div>
                        <div class="form-group form-group-icon-left col-md-6"><i
                                    class="fa fa-user input-icon input-icon-show"></i>
                            <label>Thành phố</label>
                            <input class="form-control" type="text" name="city" id="city"
                                   value="<%= user[0].city==null?"":user[0].city %>" >
                        </div>

                        <div class="form-group form-group-icon-left col-md-6"><i
                                    class="fa fa-user input-icon input-icon-show"></i>
                            <label>Quốc gia</label>
                            <input class="form-control" type="text" name="country" id="country"
                                   value="<%= user[0].country==null?"":user[0].country %>" >
                        </div>
                    </div>
                    <% if(type == '1'){ %>
                    <div class="form-group form-group-icon-left col-md-3">
                    </div>
                    <div class="form-group form-group-icon-left"><i class="fa fa-user input-icon input-icon-show"></i>
                        <label>User Type</label>
                        <select name="type" id="type">
                            <option value="2" name="type2" id="type2">User</option>
                            <option value="1" name="type1" id="type1">Admin</option>


                        </select>
                    </div>
                    <div class="row">
                        <div class="form-group form-group-icon-left col-md-3">
                        </div>
                        <div class="form-group form-group-icon-left col-md-6"><i class="fa fa-user input-icon input-icon-show"></i>
                            <label>Reset mật khẩu thành: </label>
                            <input class="form-control" type="text" name="password" id="password"
                                   value="" >
                        </div>
                    </div>
                    <% } %>
                    <div class="row">
                        <div class="form-group form-group-icon-left col-md-3">
                        </div>
                        <div class="form-group form-group-icon-left col-md-6"><i class="fa fa-user input-icon input-icon-show"></i>
                            <label>Đổi mật khẩu thành: </label>
                            <input class="form-control" type="password" name="newpassword" id="newpassword"
                                   value="" >
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group form-group-icon-left col-md-3">
                        </div>
                        <div class="form-group form-group-icon-left col-md-6"><i class="fa fa-user input-icon input-icon-show"></i>
                            <label>Nhập lại mật khẩu mới: </label>
                            <input class="form-control" type="password" name="newpasswordconf" id="newpasswordconf"
                                   value="" >
                        </div>
                    </div>
                    <input class="btn btn-primary center-block" type = "submit" value="Cập Nhật">

                </form>


            </div>
        </div>
    </div>

