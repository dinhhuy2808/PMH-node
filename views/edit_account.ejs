<script type="text/javascript">
    var effdate = '<%=user[0].dob%>';
    var newEffdate = effdate.substring(0,4)+'-'+effdate.substring(4,6)+'-'+effdate.substring(6,8);
    document.getElementById('dob').value = newEffdate;
    <% if(type == '1'){ %>
    document.getElementById('type').value = '<%=user[0].type_id%>';
    <%}%>
    document.getElementById('gender').value = '<%=user[0].gender%>';
    $('#newpasswordconf').keyup(function () {
        $(".error").remove();
        if($('#newpasswordconf').val() != ''){
            if( $("#newpassword").val()!=  $("#newpasswordconf").val()){
                $("#newpasswordconf").after("<label class='error' style='color: red'>Mật khẩu xác nhận không khớp</label>");
                $("#frmId .btn").attr('disabled', 'disabled');
            } else {
                $("#frmId .btn").removeAttr('disabled');
            }
        }
    });

    $(document).ready(function () {
        $('#email').keyup(function () {
            $(".error").remove();
            var obj = $(this);

            $.ajax({
                type: "POST",
                url: "./ajax/checkEmail",
                data: "mode=check_email&email=" + obj.val(),
                success: function (msg) {
                    //alert(msg);
                    data = msg;
                    if (data.status == 'exist') {
                        obj.after("<label class='error'>Email Id Aleady Exist</label>");
                        $("#frmId .btn").attr('disabled', 'disabled');
                    }
                    else {
                        $("#frmId .btn").removeAttr('disabled');
                    }
                }
            });
        });
        $('#frmId').submit(function () {
            if ($(this).find('.error').length == 0) {
                return true;
            }
            else {
                return false;
            }
        });
    });
    $(document).ready(function () {
        $('#phone').keyup(function () {
            $(".error").remove();
            var obj = $(this);
            if(obj.val().trim() != '<%=user[0].phone%>'){
                $.ajax({
                    type: "POST",
                    url: "./ajax/checkUser",
                    data: "mode=check_phone&username=" + obj.val(),
                    success: function (msg) {
                        //alert(msg);
                        data = msg;
                        if (data.status == 'exist') {
                            obj.after("<label class='error'>Số điện thoại này đã được đăng kí</label>");
                            $("#frmId .btn").attr('disabled', 'disabled');
                        }
                        else {
                            $("#frmId .btn").removeAttr('disabled');
                        }

                        if (obj.val().length > 11) {
                            obj.after("<label class='error'>Số điện thoại không hợp lệ</label>");
                            $("#frmId .btn").attr('disabled', 'disabled');
                        }
                        else {
                            $("#frmId .btn").removeAttr('disabled');
                        }
                    }
                });
            }

            document.getElementById('username').value = obj.val();
        });
        $('#frmId').submit(function () {
            if ($(this).find('.error').length == 0) {
                return true;
            }
            else {
                return false;
            }
        });
    });
    $(document).ready(function () {
        $('#username').keyup(function () {
            $(".error").remove();
            var obj = $(this);
            $.ajax({
                type: "POST",
                url: "./ajax/checkUser",
                data: "mode=check_email&username=" + obj.val(),
                success: function (msg) {
                    //alert(msg);
                    data = msg;
                    if (data.status == 'exist') {
                        obj.after("<label class='error'>User Name Aleady Exist</label>");
                        $("#frmId .btn").attr('disabled', 'disabled');
                    }
                    else {
                        $("#frmId .btn").removeAttr('disabled');
                    }
                }
            });
        });
        $('#frmId').submit(function () {
            if ($(this).find('.error').length == 0) {
                return true;
            }
            else {
                return false;
            }
        });
    });
</script>
